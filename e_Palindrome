/******************************************************************************

Exercicio de recursão 3

*******************************************************************************/
#include <stdio.h>
#include <string.h>

int Palindrome(char*palavra, int first, int last){
    
    if (first >= last)
        return 1;
    
    else if (palavra[first]==palavra[last])
        return (Palindrome (palavra, first+1,last-1));


return 0;
}



int main()
{
    
    if (Palindrome("o",0,2))
        printf("É Palindrome");
    
    else 
        printf("Não é  Palindrome");
       return 0;
}
